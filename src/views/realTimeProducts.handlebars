{{!< layouts/main}}

<section class="container">
  <!-- Botón para volver a la tienda -->
  <div style="text-align: right; margin-bottom: 20px;">
    <a href="/products" class="btn-secondary">🛒 Ir a la tienda</a>
  </div>

  <h2 class="mb-4">🛠️ Productos en tiempo real</h2>

  <!-- Formularios lado a lado -->
  <div class="forms-grid">
    <!-- Crear producto -->
    <form id="formCreate" class="card">
      <h3 class="mb-3">➕ Crear producto</h3>

      <label for="title">Título</label>
      <input id="title" name="title" placeholder="Ej: Yerba orgánica" required />

      <label for="description">Descripción</label>
      <input id="description" name="description" placeholder="Breve descripción" required />

      <div class="row">
        <div style="flex:1;">
          <label for="code">Código único</label>
          <input id="code" name="code" placeholder="Ej: YB001" required />
        </div>
        <div style="flex:1;">
          <label for="price">Precio</label>
          <input id="price" name="price" type="number" step="0.01" placeholder="$" required />
        </div>
      </div>

      <div class="row">
        <div style="flex:1;">
          <label for="stock">Stock</label>
          <input id="stock" name="stock" type="number" placeholder="Ej: 50" required />
        </div>
        <div style="flex:1;">
          <label for="category">Categoría</label>
          <input id="category" name="category" placeholder="Ej: Bebidas" required />
        </div>
      </div>

      <label for="thumbnails">Thumbnails (opcional, separados por coma)</label>
      <input id="thumbnails" name="thumbnails" placeholder="url1, url2" />

      <div class="row">
        <label>
          <input name="status" type="checkbox" checked />
          Activo
        </label>
      </div>

      <button type="submit">Crear producto</button>
      <small id="createMsg"></small>
    </form>

    <!-- Eliminar producto -->
    <form id="formDelete" class="card">
      <h3 class="mb-3">🗑️ Eliminar producto</h3>
      <label for="pid">ID del producto</label>
      <input id="pid" name="pid" placeholder="Ej: 68dc3a..." required />
      <button type="submit" class="danger">Eliminar producto</button>
      <small id="deleteMsg"></small>
    </form>
  </div>

  <hr />

  <!-- Lista de productos en tiempo real -->
  <h3 class="mb-3">📦 Lista de productos</h3>
  <ul id="productsList" class="list">
    {{#each products}}
      <li class="card" data-id="{{this._id}}">
        <b>{{this.title}}</b>
        <div>Precio: ${{this.price}}</div>
        <div>Categoría: {{this.category}}</div>
        <div>Stock: {{this.stock}}</div>
        <small>ID: {{this._id}} · Code: {{this.code}}</small>
      </li>
    {{/each}}
  </ul>
</section>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realtime.js"></script>












