
{{!< layouts/main}}

<section>
  <h2>Productos en tiempo real</h2>

  <div class="grid-2">
    <form id="formCreate" class="card">
      <h3>Crear producto</h3>
      <input name="title" placeholder="Título" required />
      <input name="description" placeholder="Descripción" required />
      <input name="code" placeholder="Code único" required />
      <input name="price" type="number" step="0.01" placeholder="Precio" required />
      <input name="stock" type="number" placeholder="Stock" required />
      <input name="category" placeholder="Categoría" required />
      <input name="thumbnails" placeholder='Thumbnails (opcional, coma-separado)' />
      <label class="row">
        <input name="status" type="checkbox" checked />
        <span>Activo</span>
      </label>
      <button type="submit">Crear</button>
      <small id="createMsg"></small>
    </form>

    <form id="formDelete" class="card">
      <h3>Eliminar producto</h3>
      <input name="pid" placeholder="ID del producto" required />
      <button type="submit" class="danger">Eliminar</button>
      <small id="deleteMsg"></small>
    </form>
  </div>

  <hr />

  <ul id="productsList" class="list">
    {{#each products}}
      <li class="card" data-id="{{this.id}}">
        <b>{{this.title}}</b>
        <div>Precio: ${{this.price}}</div>
        <div>Categoría: {{this.category}}</div>
        <div>Stock: {{this.stock}}</div>
        <small>ID: {{this.id}} · Code: {{this.code}}</small>
      </li>
    {{/each}}
  </ul>
</section>

<script src="/socket.io/socket.io.js"></script>


<script src="/js/realtime.js"></script>



